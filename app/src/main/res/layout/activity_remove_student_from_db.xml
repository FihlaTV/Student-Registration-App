<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".RemoveStudentFromDB">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tiAddLayer1"
            android:layout_width="match_parent"
            android:hint="Student Name"
            android:textColorHint="#77ae69"
            app:backgroundTint="#77ae69"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etStudentName"
                app:backgroundTint="#77ae69"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:hint="Student Name"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#77AE69"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/tiAddLayer1"
            android:id="@+id/tiAddLayer2"
            android:layout_width="match_parent"
            android:hint="Student ID"
            android:textColorHint="#77ae69"
            app:backgroundTint="#77ae69"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etStudentId"
                app:backgroundTint="#77ae69"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:hint="Student ID"
                android:inputType="text"
                android:textColor="#000000"
                android:maxLength="21"
                android:textColorHint="#77AE69"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/tiAddLayer2"
            android:id="@+id/tiAddLayer3"
            android:layout_width="match_parent"
            android:hint="Student CNIC"
            android:textColorHint="#77ae69"
            app:backgroundTint="#77ae69"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etStudentCnic"
                app:backgroundTint="#77ae69"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:hint="Student CNIC"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#77AE69"
                android:maxLength="13"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/tiAddLayer3"
            android:id="@+id/btnRemoveStudentFromDB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="REMOVE"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/round_button"/>

    </RelativeLayout>

</RelativeLayout>