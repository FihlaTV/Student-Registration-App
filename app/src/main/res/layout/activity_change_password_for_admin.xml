<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordForAdmin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tiLayer0"
            android:layout_width="match_parent"
            android:hint="Enter Old Password"
            android:textColorHint="#77ae69"
            app:backgroundTint="#77ae69"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etOldPassword"
                app:backgroundTint="#77ae69"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:hint="Enter Old Password"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#77AE69"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tiLayer0"
            android:id="@+id/tiLayer1"
            android:layout_width="match_parent"
            android:hint="Enter New Password"
            android:textColorHint="#77ae69"
            app:backgroundTint="#77ae69"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etNewPassword"
                app:backgroundTint="#77ae69"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:hint="Enter New Password"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#77AE69"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btnAdminNewPassword"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tiLayer1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="CHANGE PASSWORD"
            android:background="@drawable/round_button"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>


</RelativeLayout>