<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".AddNewCoursesToDB">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tiLayer1"
            android:layout_width="match_parent"
            android:hint="Course Name"
            android:textColorHint="#77ae69"
            app:backgroundTint="#77ae69"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etNewCourseName"
                app:backgroundTint="#77ae69"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:hint="Course Name"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#77AE69"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tiLayer1"
            android:id="@+id/tiLayer2"
            android:layout_width="match_parent"
            android:hint="Course Pre Requisite Name"
            android:textColorHint="#77ae69"
            app:backgroundTint="#77ae69"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etNewCoursePreReqName"
                app:backgroundTint="#77ae69"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:hint="Course Pre Requisite Name"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#77AE69"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tiLayer2"
            android:id="@+id/tiLayer3"
            android:layout_width="match_parent"
            android:hint="Course Semester"
            android:textColorHint="#77ae69"
            app:backgroundTint="#77ae69"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etNewCourseSemester"
                app:backgroundTint="#77ae69"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:hint="Course Semester"
                android:inputType="number"
                android:textColor="#000000"
                android:maxLength="1"
                android:textColorHint="#77AE69"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="75dp"
            android:layout_below="@+id/tiLayer3"
            android:id="@+id/btnAddNewCourseToDb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="ADD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/round_button"/>

    </RelativeLayout>


</RelativeLayout>